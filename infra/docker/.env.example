# NeuronAI Self-Hosted Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SECURITY - CHANGE THESE IMMEDIATELY
# ============================================

# JWT Secret for authentication (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secret-jwt-key-change-this-immediately

# PostgreSQL Database
POSTGRES_USER=neuronai
POSTGRES_PASSWORD=change-this-to-a-secure-password
POSTGRES_DB=neuronai

# Redis Cache
REDIS_PASSWORD=change-this-to-a-secure-password

# MinIO S3-Compatible Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-this-to-a-secure-password

# ============================================
# LLM Configuration
# ============================================

# OpenAI API Key (required for AI functionality)
OPENAI_API_KEY=sk-your-openai-api-key

# Model Configuration
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4096
TEMPERATURE=0.7

# ============================================
# Service Configuration
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum request size in bytes (10MB default)
MAX_REQUEST_SIZE=10485760

# ============================================
# Optional External Services
# ============================================

# Supabase (optional - leave empty to use local database only)
SUPABASE_URL=
SUPABASE_KEY=

# Sentry Error Tracking (optional)
SENTRY_DSN=

# ============================================
# Domain Configuration (for production with nginx)
# ============================================

# Your domain name (e.g., neuronai.yourdomain.com)
DOMAIN=localhost

# Email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=your-email@example.com
